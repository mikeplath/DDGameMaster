<Page x:Class="DDGameMaster.Views.GameLogView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      mc:Ignorable="d" 
      Title="GameLogView" Height="450" Width="800">
    <Grid Background="#2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Game Log" Foreground="White" FontSize="32" HorizontalAlignment="Center" Margin="0,10,0,10"/>
        
        <!-- This is the main text box for the log -->
        <TextBox Grid.Row="1" x:Name="LogTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Background="#3E3E42" Foreground="White" Margin="20,0"/>
        
        <Button Grid.Row="2" Content="Back to Menu" Width="200" Height="40" Margin="20" Click="Back_Click"/>
    </Grid>
</Page>