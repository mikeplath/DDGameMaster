<Page x:Class="DDGameMaster.Views.CharacterCreationView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      mc:Ignorable="d" 
      Title="CharacterCreationView" Height="750" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#2D2D30">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <TextBlock Text="Create Your Character" Foreground="White" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column for Basic Info and Stats -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Name" Foreground="White" Margin="0,0,0,5"/>
                        <TextBox x:Name="NameTextBox" Width="200" Margin="0,0,0,10"/>

                        <TextBlock Text="Race" Foreground="White" Margin="0,0,0,5"/>
                        <ComboBox x:Name="RaceComboBox" Width="200" Margin="0,0,0,10"/>

                        <TextBlock Text="Class" Foreground="White" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ClassComboBox" Width="200" Margin="0,0,0,20"/>

                        <TextBlock Text="Ability Scores" Foreground="White" FontSize="18" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Strength" Foreground="White" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="0" Grid.Column="1" x:Name="StrengthTextBox" Text="10" Width="50" Margin="10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Dexterity" Foreground="White" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="1" Grid.Column="1" x:Name="DexterityTextBox" Text="10" Width="50" Margin="10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Constitution" Foreground="White" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="2" Grid.Column="1" x:Name="ConstitutionTextBox" Text="10" Width="50" Margin="10,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Intelligence" Foreground="White" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="3" Grid.Column="1" x:Name="IntelligenceTextBox" Text="10" Width="50" Margin="10,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Wisdom" Foreground="White" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="4" Grid.Column="1" x:Name="WisdomTextBox" Text="10" Width="50" Margin="10,5"/>
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Charisma" Foreground="White" VerticalAlignment="Center"/>
                            <TextBox   Grid.Row="5" Grid.Column="1" x:Name="CharismaTextBox" Text="10" Width="50" Margin="10,5"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Right Column for Skill Proficiencies -->
                    <StackPanel Grid.Column="1" x:Name="SkillsPanel" Margin="20,0,0,0">
                        <TextBlock Text="Skill Proficiencies" Foreground="White" FontSize="18" Margin="0,0,0,10"/>
                        <TextBlock Text="(Check the skills your character is proficient in)" Foreground="Gray" FontSize="12" Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Acrobatics (Dex)" Foreground="White" Margin="2" x:Name="AcrobaticsCheckBox"/>
                        <CheckBox Content="Animal Handling (Wis)" Foreground="White" Margin="2" x:Name="AnimalHandlingCheckBox"/>
                        <CheckBox Content="Arcana (Int)" Foreground="White" Margin="2" x:Name="ArcanaCheckBox"/>
                        <CheckBox Content="Athletics (Str)" Foreground="White" Margin="2" x:Name="AthleticsCheckBox"/>
                        <CheckBox Content="Deception (Cha)" Foreground="White" Margin="2" x:Name="DeceptionCheckBox"/>
                        <CheckBox Content="History (Int)" Foreground="White" Margin="2" x:Name="HistoryCheckBox"/>
                        <CheckBox Content="Insight (Wis)" Foreground="White" Margin="2" x:Name="InsightCheckBox"/>
                        <CheckBox Content="Intimidation (Cha)" Foreground="White" Margin="2" x:Name="IntimidationCheckBox"/>
                        <CheckBox Content="Investigation (Int)" Foreground="White" Margin="2" x:Name="InvestigationCheckBox"/>
                        <CheckBox Content="Medicine (Wis)" Foreground="White" Margin="2" x:Name="MedicineCheckBox"/>
                        <CheckBox Content="Nature (Int)" Foreground="White" Margin="2" x:Name="NatureCheckBox"/>
                        <CheckBox Content="Perception (Wis)" Foreground="White" Margin="2" x:Name="PerceptionCheckBox"/>
                        <CheckBox Content="Performance (Cha)" Foreground="White" Margin="2" x:Name="PerformanceCheckBox"/>
                        <CheckBox Content="Persuasion (Cha)" Foreground="White" Margin="2" x:Name="PersuasionCheckBox"/>
                        <CheckBox Content="Religion (Int)" Foreground="White" Margin="2" x:Name="ReligionCheckBox"/>
                        <CheckBox Content="Sleight of Hand (Dex)" Foreground="White" Margin="2" x:Name="SleightOfHandCheckBox"/>
                        <CheckBox Content="Stealth (Dex)" Foreground="White" Margin="2" x:Name="StealthCheckBox"/>
                        <CheckBox Content="Survival (Wis)" Foreground="White" Margin="2" x:Name="SurvivalCheckBox"/>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button Content="Create Character" Width="200" Height="40" Margin="10" Click="CreateCharacter_Click"/>
                    <Button Content="Back" Width="200" Height="40" Margin="10" Click="Back_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>