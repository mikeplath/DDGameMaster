<Window x:Class="DDGameMaster.Views.CharacterCreationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Your Character" 
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#FF2D2D30">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Column="0" Margin="20">
            <StackPanel>
                <TextBlock Text="Create Your Character" Foreground="White" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <!-- Basic Info -->
                <Border Background="#FF383838" BorderBrush="#FF555555" BorderThickness="1" 
                        CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Basic Information" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Character Name:" Foreground="White" Margin="0,5"/>
                        <TextBox Name="CharacterNameBox" Background="#FF2D2D30" Foreground="White" 
                                 BorderBrush="#FF555555" Padding="5" Text=""/>
                        
                        <TextBlock Text="Backstory:" Foreground="White" Margin="0,10,0,5"/>
                        <TextBox Name="BackstoryBox" Background="#FF2D2D30" Foreground="White" 
                                 BorderBrush="#FF555555" Padding="5" Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                 Text="Enter your character's background and history..."/>
                    </StackPanel>
                </Border>
                
                <!-- Race Selection -->
                <Border Background="#FF383838" BorderBrush="#FF555555" BorderThickness="1" 
                        CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Race Selection" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <ListBox Name="RaceListBox" Background="#FF2D2D30" Foreground="White" 
                                 BorderBrush="#FF555555" Height="120" SelectionChanged="RaceListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Description}" FontSize="10" Foreground="Gray" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
                
                <!-- Class Selection -->
                <Border Background="#FF383838" BorderBrush="#FF555555" BorderThickness="1" 
                        CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Class Selection" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <ListBox Name="ClassListBox" Background="#FF2D2D30" Foreground="White" 
                                 BorderBrush="#FF555555" Height="120" SelectionChanged="ClassListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Description}" FontSize="10" Foreground="Gray" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding HitDie, StringFormat='Hit Die: d{0}'}" FontSize="9" Foreground="Yellow"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
                
                <!-- Ability Scores -->
                <Border Background="#FF383838" BorderBrush="#FF555555" BorderThickness="1" 
                        CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Ability Scores (Point Buy)" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Name="PointsRemainingText" Text="Points Remaining: 27" Foreground="Yellow" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <Button Content="Use Standard Array (15,14,13,12,10,8)" 
                                Background="#FF0078D4" Foreground="White" BorderThickness="0"
                                Margin="0,0,0,10" Click="UseStandardArray_Click"/>
                        
                        <StackPanel Name="AbilityScoresPanel">
                            <!-- Ability score controls will be added programmatically -->
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Character Summary Panel -->
        <Border Grid.Column="1" Background="#FF383838" BorderBrush="#FF555555" BorderThickness="1" Margin="10">
            <ScrollViewer>
                <StackPanel Margin="10">
                    <TextBlock Text="Character Summary" Foreground="White" FontSize="16" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    
                    <TextBlock Name="SummaryNameText" Text="Character Name" Foreground="White" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    
                    <TextBlock Name="SummaryRaceText" Text="Race: None Selected" Foreground="Gray" 
                               HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    
                    <TextBlock Name="SummaryClassText" Text="Class: None Selected" Foreground="Gray" 
                               HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    
                    <!-- Final Ability Scores -->
                    <Border Background="#FF2D2D30" BorderBrush="#FF555555" BorderThickness="1" 
                            CornerRadius="5" Padding="10" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Final Ability Scores" Foreground="White" FontSize="14" FontWeight="Bold" 
                                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            
                            <StackPanel Name="FinalStatsPanel">
                                <!-- Final stats will be populated programmatically -->
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Create Character Button -->
                    <Button Name="CreateCharacterButton" Content="Create Character" 
                            Background="#FF0078D4" Foreground="White" BorderThickness="0"
                            FontSize="16" FontWeight="Bold" Padding="10"
                            Click="CreateCharacter_Click" IsEnabled="False"/>
                    
                    <Button Content="Quick Character (Random)" 
                            Background="#FFDC3545" Foreground="White" BorderThickness="0"
                            Margin="0,10,0,0" Click="QuickCharacter_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>