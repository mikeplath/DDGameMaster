<Page x:Class="DDGameMaster.Views.DiceRollerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      mc:Ignorable="d" 
      Title="DiceRollerView" Height="450" Width="800">
    <Grid Background="#2D2D30">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Dice Roller" Foreground="White" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock x:Name="ResultTextBlock" Text="Result: 0" Foreground="Gold" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <WrapPanel HorizontalAlignment="Center" MaxWidth="400">
                <Button Content="d4" Width="80" Height="40" Margin="5" Click="Roll_Click" Tag="4"/>
                <Button Content="d6" Width="80" Height="40" Margin="5" Click="Roll_Click" Tag="6"/>
                <Button Content="d8" Width="80" Height="40" Margin="5" Click="Roll_Click" Tag="8"/>
                <Button Content="d10" Width="80" Height="40" Margin="5" Click="Roll_Click" Tag="10"/>
                <Button Content="d12" Width="80" Height="40" Margin="5" Click="Roll_Click" Tag="12"/>
                <Button Content="d20" Width="80" Height="40" Margin="5" Click="Roll_Click" Tag="20"/>
                <Button Content="d100" Width="80" Height="40" Margin="5" Click="Roll_Click" Tag="100"/>
            </WrapPanel>

            <Button Content="Back" Width="200" Height="40" Margin="0,30,0,0" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>