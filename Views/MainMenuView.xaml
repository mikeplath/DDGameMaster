<Page x:Class="DDGameMaster.Views.MainMenuView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      mc:Ignorable="d" 
      Title="MainMenuView" Height="450" Width="800">
    <Grid Background="#2D2D30">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="D&D Game Master" Foreground="White" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,30"/>
            <Button Content="Create New Character" Width="200" Height="40" Margin="5" Click="CreateNewCharacter_Click"/>
            <Button Content="View Character Sheet" Width="200" Height="40" Margin="5" Click="ViewCharacterSheet_Click"/>
            <Button Content="Game Log" Width="200" Height="40" Margin="5" Click="GameLog_Click"/>
            
            <!-- THESE ARE THE NEW BUTTONS -->
            <Button Content="Save Game" Width="200" Height="40" Margin="10,20,10,5" Click="SaveGame_Click"/>
            <Button Content="Load Game" Width="200" Height="40" Margin="10,5,10,5" Click="LoadGame_Click"/>
            
            <Button Content="Exit" Width="200" Height="40" Margin="10,20,10,10" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Page>