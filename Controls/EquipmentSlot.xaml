<UserControl x:Class="DDGameMaster.Controls.EquipmentSlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="50" Height="50">
    <Border Name="SlotBorder" Background="#FF2D2D30" BorderBrush="#FF555555" BorderThickness="2" 
            CornerRadius="8" Margin="2">
        <Grid>
            <Image Name="ItemImage" Stretch="Uniform" Margin="3"/>
            <TextBlock Name="SlotLabel" Text="" Foreground="Gray" FontSize="8" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>