<UserControl x:Class="DDGameMaster.Controls.SpellSlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="80" Height="80">
    <Border Name="SlotBorder" Background="#FF2D2D30" BorderBrush="#FF555555" BorderThickness="1" 
            CornerRadius="5" Margin="2">
        <Grid>
            <Image Name="SpellImage" Stretch="Uniform" Margin="5"/>
            <TextBlock Name="SpellText" Text="" Foreground="White" FontSize="9" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                       Background="#AA000000" Padding="2" TextWrapping="Wrap"/>
        </Grid>
    </Border>
</UserControl>