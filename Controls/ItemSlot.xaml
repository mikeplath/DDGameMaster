<UserControl x:Class="DDGameMaster.Controls.ItemSlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="80" Height="80">
    <Border Name="SlotBorder" Background="#FF2D2D30" BorderBrush="#FF555555" BorderThickness="1" 
            CornerRadius="5" Margin="2">
        <Grid>
            <Image Name="ItemImage" Stretch="Uniform" Margin="5"/>
            <TextBlock Name="ItemText" Text="" Foreground="White" FontSize="10" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                       Background="#AA000000" Padding="2"/>
        </Grid>
    </Border>
</UserControl>